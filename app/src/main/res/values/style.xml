<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="circular_progress_indicator">
        <item name="trackThickness">@dimen/indicator_thickness</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/small_gap</item>
        <item name="android:paddingBottom">@dimen/small_gap</item>
        <item name="android:paddingStart">@dimen/large_gap</item>
        <item name="android:paddingEnd">@dimen/large_gap</item>
    </style>

    <style name="icon_button">
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="icon_button_top_bar">
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tint">@color/onBackground</item>
    </style>

    <style name="floating_action_button" parent="Theme.GameboyDB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="screenshot_dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
    </style>
</resources>
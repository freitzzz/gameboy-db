<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/normal_gap">

    <TextView
        android:id="@+id/preference_list_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/subtitle_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Value" />

    <ImageView
        android:id="@+id/preference_list_item_check"
        android:layout_width="@dimen/preference_check_size"
        android:layout_height="@dimen/preference_check_size"
        android:contentDescription="@string/list_item_check_content_description"
        android:src="@drawable/check"
        android:layout_marginStart="@dimen/normal_gap"
        app:layout_constraintStart_toEndOf="@id/preference_list_item_value"
        app:layout_constraintTop_toTopOf="@id/preference_list_item_value"
        app:layout_constraintBottom_toBottomOf="@id/preference_list_item_value"/>

</androidx.constraintlayout.widget.ConstraintLayout>
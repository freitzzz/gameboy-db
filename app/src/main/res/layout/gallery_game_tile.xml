<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/gallery_cover"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/gallery_game_tile_cover"
        android:layout_width="@dimen/gallery_cover"
        android:layout_height="@dimen/gallery_cover"
        android:contentDescription="@string/game_cover_content_description"
        android:layout_marginBottom="@dimen/large_gap"
        android:scaleType="centerCrop"
        android:src="@drawable/cover"
        app:shapeAppearance="@style/rounded_shape" />

    <TextView
        android:id="@+id/gallery_game_tile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_name_placeholder"
        android:textStyle="bold"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/gallery_game_tile_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_gap"
        android:text="@string/game_genre_placeholder"
        android:textColor="@color/subtitle"
        android:textSize="@dimen/subtitle_size" />

</LinearLayout>